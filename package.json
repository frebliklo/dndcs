{
  "name": "dndcs-web",
  "version": "0.1.0",
  "description": "API and web client for creating and viewing character sheets for DnD 5e",
  "author": "frebliklo",
  "repository": {
    "type": "git",
    "url": "https://github.com/frebliklo/dndcs"
  },
  "main": "src/server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "heroku-postbuild": "npm run build-ts",
    "dev": "env-cmd -f ./.env.dev ts-node-dev --respawn ./src/server.ts",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "class-validator": "^0.9.1",
    "cors": "^2.8.5",
    "env-cmd": "^9.0.1",
    "express": "^4.16.4",
    "graphql": "^14.2.1",
    "graphql-query-complexity": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.0",
    "prisma-client-lib": "^1.30.4",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.2.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongodb": "^3.1.22",
    "@types/mongoose": "^5.3.26",
    "@types/node": "^11.13.4",
    "prettier": "^1.16.4",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.3"
  }
}
